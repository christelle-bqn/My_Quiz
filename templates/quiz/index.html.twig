{% extends "base.html.twig" %}

{% block title %}My Quiz - Quiz{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-lg navbar-dark">
        <a class="navbar-brand">My Quiz</a>
        <div class="navbar-nav">
            {% if app.user %}
                <a class="nav-item nav-link active" href="{{ path('quiz_index')}}">Quiz</a>
                <a class="nav-item nav-link" href="{{ path('history_index')}}">Historique</a>
                <a class="nav-item nav-link" href="{{ path('current_user_show')}}">Profil</a>
                <a class="nav-item nav-link" href="{{ path('app_logout')}}">Deconnexion</a>
            {% else %}
                <a class="nav-item nav-link active" href="{{ path('homepage')}}">Home</a>
                <a class="nav-item nav-link active" href="{{ path('quiz_index')}}">Quiz</a>
                <a class="nav-item nav-link" href="{{ path('history_index')}}">Historique</a>
            {% endif %}
        </div>
    </nav>
    {% if app.user %}
    <div class="container-greetings">
        <p id="greetings">Bienvenue, {{ app.user.username }} !</p>
    </div>
    {% endif %}
    <div class="container d-flex flex-column align-items-center">
        <h1 id="title">QUIZ</h1>
        <div class="container-quiz">
            <div class="row container-quiz-layout">
                {% for key, category in array_quiz %}
                        <div class="col col-lg-6 col-md-6 col-sm-12 col-xs-12 d-flex flex-row justify-content-center">
                            <div class="quiz d-flex flex-column align-items-center">
                                <a href="{{ path('quiz_show', {category: category.id}) }}" class="quiz-link">
                                    <div class="quiz-thumb">
                                        <img class="quiz-img" src="{{ asset('assets/images/quiz/' ~ key ~ '') }}" alt="..."/>
                                    </div>
                                        <p class="quiz-title">Quiz : {{ category.name }}</p>
                                </a>
                            </div>
                        </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}